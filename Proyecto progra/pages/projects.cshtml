@{
    ViewData["Title"] = "Proyectos";
}

<div class="container">
    <h2>Mis Proyectos</h2>

    <ul>
        @foreach (var project in Model.Projects)
        {
            <li>
                <h3>@project.Name</h3>
                <p>@project.Description</p>
                <p><strong>Tecnolog√≠as:</strong> @project.Technologies</p>
                <p><a href="@project.RepositoryUrl" target="_blank">Ver en GitHub</a></p>
            </li>
        }
    </ul>
</div>
